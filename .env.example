# TERRACARE LEDGER CONNECTION
# ═════════════════════════════════════════════════════════════════════════════

# RPC endpoint for Terracare blockchain
REACT_APP_TERRACARE_RPC_URL=http://localhost:8545

# Chain ID (1337 for local, custom for production)
REACT_APP_CHAIN_ID=1337

# Environment mode
REACT_APP_ENV=development

